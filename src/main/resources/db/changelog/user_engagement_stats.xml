<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20250417-14-user-engagement-stats" author="grok">
        <createTable tableName="user_engagement_stats">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="super_likes_sent" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="match_requests_sent" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="match_requests_received" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="matches_count" type="INTEGER" defaultValue="0">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="user_engagement_stats"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_engagement_stats_user"/>
        <createIndex tableName="user_engagement_stats" indexName="idx_user_engagement_stats_user_id" unique="true">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>