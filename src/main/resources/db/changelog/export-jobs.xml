<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">


    <changeSet id="match-export-00" author="gsss">
        <createTable tableName="export_jobs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="group_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="total_rows" type="INTEGER" defaultValueNumeric="0"/>
            <column name="processed_rows" type="INTEGER" defaultValueNumeric="0"/>
            <column name="error_message" type="TEXT"/>
            <column name="started_at" type="VARCHAR(50)"/>
            <column name="ended_at" type="VARCHAR(50)"/>
            <column name="completed_at" type="TIMESTAMP"/>
        </createTable>
        <createIndex tableName="export_jobs" indexName="idx_export_group_id">
            <column name="group_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="match-export-01-alter-started-at" author="gsss">
        <addColumn tableName="export_jobs">
            <column name="started_at_ts" type="TIMESTAMP(6)"/>
        </addColumn>

        <update tableName="export_jobs">
            <column name="started_at_ts" valueComputed="CAST(started_at AS TIMESTAMP)"/>
        </update>

        <dropColumn tableName="export_jobs" columnName="started_at"/>

        <renameColumn tableName="export_jobs" oldColumnName="started_at_ts" newColumnName="started_at" columnDataType="TIMESTAMP(6)"/>
    </changeSet>

    <changeSet id="match-export-02-alter-ended-at" author="gsss">
        <addColumn tableName="export_jobs">
            <column name="ended_at_ts" type="TIMESTAMP(6)"/>
        </addColumn>

        <update tableName="export_jobs">
            <column name="ended_at_ts" valueComputed="CAST(ended_at AS TIMESTAMP)"/>
        </update>

        <dropColumn tableName="export_jobs" columnName="ended_at"/>

        <renameColumn tableName="export_jobs" oldColumnName="ended_at_ts" newColumnName="ended_at" columnDataType="TIMESTAMP(6)"/>
    </changeSet>

</databaseChangeLog>