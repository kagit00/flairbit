<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="20250417-06-professions" author="grok">
        <createTable tableName="professions">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="profile_id" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="job_title" type="VARCHAR(100)"/>
            <column name="company" type="VARCHAR(200)"/>
            <column name="industry" type="VARCHAR(100)"/>
            <column name="version" type="BIGINT" defaultValue="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="professions"
                                 baseColumnNames="profile_id"
                                 referencedTableName="profiles"
                                 referencedColumnNames="id"
                                 constraintName="fk_professions_profile"/>
        <createIndex tableName="professions" indexName="idx_professions_profile_id" unique="true">
            <column name="profile_id"/>
        </createIndex>
    </changeSet>

    <changeSet id="20250504-04-add-timestamps-to-professions" author="grok">
        <addColumn tableName="professions">
            <column name="created_at" type="TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP"/>
        </addColumn>
    </changeSet>


</databaseChangeLog>